/*
 * Dosya: 04_Simon_Says_(Hafıza Oyunu)
 * Açıklama: Rastgele üretilen LED dizisini kullanıcının tekrar etmesi gereken hafıza oyunu.
 * Kullanılan Teknikler: Dizi (Array) yönetimi, Algoritma kurma.
 */

#include "bizimKutuphane.h"

// ================= GLOBAL DEĞİŞKENLER =================
int dogru_sira[5] = {1, 2, 1, 3, 2}; // Örnek senaryo dizisi
int kullanici_sira[5];
int seviye = 0;

// ================= ANA DÖNGÜ (Main Loop) =================
/* Bu blok while(1) içine yerleştirilmelidir */

// 1. Adım: Diziyi kullanıcıya göster
for(int i=0; i<=seviye; i++) {
    // LED_Yak fonksiyonu pin tanımlarına göre özelleştirilmelidir
    // Örn: LED_Yak(dogru_sira[i]);
    HAL_Delay(500);
    // LED_Sondur();
    HAL_Delay(200);
}

// 2. Adım: Kullanıcı girişini bekle ve kontrol et
for(int i=0; i<=seviye; i++) {
    // Butona basılana kadar bekle (Polling)
    // kullanici_sira[i] = Basilan_Buton_ID(); 
    
    if(kullanici_sira[i] != dogru_sira[i]) {
        // HATA: Yanlış tuş, oyunu sıfırla
        seviye = 0; 
        break;
    }
}
// Hata yoksa sonraki seviyeye geç
if(seviye < 4) seviye++;
HAL_Delay(1000);
